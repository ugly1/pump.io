{
  "name" : "pump.io",
  "version" : "0.4.0-alpha.1",
  "author" : "Evan Prodromou <evan@e14n.com>",
  "homepage" : "http://pump.io/",
   "licenses" : [
      {
         "url" : "http://www.apache.org/licenses/LICENSE-2.0.html",
         "type" : "Apache 2.0"
      }
   ],
   "engine" : {
      "node" : ">=0.8"
   },
   "repository" : {
      "url" : "git://github.com/e14n/pump.io.git",
      "type" : "git"
   },
   "scripts" : {
      "start" : "./bin/pump",
      "pretest": "npm run-script build && npm run-script build-test",
      "test": "vows --spec -i test/*-test.js",
      "posttest": "npm run-script clean",
      "build": "mkdir -p lib/ lib/model lib/routes && coffee -b -c -o lib/ src/*.coffee && coffee -b -c -o lib/model/ src/model/*.coffee && coffee -b -c -o lib/routes/ src/routes/*.coffee",
      "build-test": "coffee -c test/*.coffee && coffee -c test/lib/*.coffee",
      "prepublish": "npm run-script build && npm run-script build-test",
      "postpublish": "npm run-script clean",
      "clean": "rm -f lib/*.js lib/model/*.js lib/routes/*.js test/*-test.js *~ lib/*~ lib/model/*~ lib/routes/*~ src/*~ test/*~"
   },
   "devDependencies" : {
      "rimraf" : "2.0.x",
      "xml2js" : "0.1.x",
      "simplesmtp" : "0.1.x",
      "vows" : "0.7.x",
      "node-mocks-http" : "0.0.x",
      "zombie" : "1.4.x"
   },
   "keywords" : [
      "activitystreams",
      "socialnetwork",
      "social",
      "pump",
      "streams",
      "api",
      "app",
      "server"
   ],
   "preferGlobal" : "true",
   "dependencies" : {
      "bcrypt" : "0.7.x",
      "express" : "2.5.x",
      "emailjs" : "0.3.x",
      "step" : "0.0.x",
      "underscore" : "1.4.x",
      "jankyqueue" : "0.1.x",
      "crypto-cacerts" : "0.1.x",
      "gm" : "1.9.x",
      "node-uuid" : "1.3.x",
      "connect" : "1.x",
      "underscore-contrib" : "0.1.x",
      "connect-databank" : "0.13.x",
      "connect-auth" : "0.5.3",
      "databank" : "0.19.x",
      "oauth-evanp" : "~0.9.10-evanp.2",
      "schlock" : "~0.2.1",
      "validator" : "0.4.x",
      "optimist" : "0.3.x",
      "dateformat" : "1.x",
      "mkdirp" : "0.3.x",
      "set-immediate" : "0.1.x",
      "dialback-client" : "~0.1.5",
      "showdown" : "0.3.x",
      "sockjs" : "0.3.x",
      "utml" : "0.2.x",
      "bunyan" : "0.16.x",
      "webfinger" : "~0.4.2"
   },
   "bin" : {
      "pump-authorize" : "./bin/pump-authorize",
      "pump-stop-following" : "./bin/pump-stop-following",
      "pump-register-user" : "./bin/pump-register-user",
      "pump-follow" : "./bin/pump-follow",
      "pump-register-app" : "./bin/pump-register-app",
      "pump-post-note" : "./bin/pump-post-note",
      "pump" : "./bin/pump"
   }
}
